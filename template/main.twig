{% extends '_layout.twig' %}

{% block style %}main{% endblock %}

{% block body %}
    <h1>Беспроигрышное мастерство маджонга</h1>
    <h2>Задачи</h2>
    {% if exerciseList %}
        <ul>
            {% for exercise in exerciseList %}
                <li>
                    <a href="{{ path('exercise', { 'exercise_id' : exercise.exercise_id }) }}?page={{ curPage }}">
                        №{{ exercise.exercise_id|lpad('0', 3) }}. {{ exercise.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
        {% include '_paginator.twig' with {
            'totalCount'    : exerciseCount,
            'perPage'       : perPage,
            'curPage'       : curPage,
            'adjacentPages' : 5,
            'linkTemplate'  : 'main'
        } only %}
    {% else %}
        <p class="empty">Нет задач</p>
    {% endif %}
{% endblock %}

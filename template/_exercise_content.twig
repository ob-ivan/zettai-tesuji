{#
    Красивый вывод задачи.
    Параметры:
        content
            kyoku
            position
            turn
            score
            dora
            hand
            draw
            answer
                a
                    discard
                    content
                b
                    discard
                    content
                c
                    discard
                    content
            best_answer
        question    <string>
        show_answer <boolean>
#}
<div class="exercise">
    <div class="row">
        <div class="left">
            <div class="kyoku"   >Сдача:   {{ content.kyoku   |kyoku }}</div>
            <div class="position">Позиция: {{ content.position|wind  }}</div>
            <div class="turn"    >Ход:     {{ content.turn           }}</div>
            <div class="score"   >Очки:    {{ content.score          }}</div>
        </div>
        <div class="dora">Дора: {{ content.dora|tile|raw }}</div>
        <br/>
    </div>
    <div class="row">
        <div class="hand">Рука:   {{ content.hand|tile|raw }}</div>
        <div class="draw">Набрал: {{ content.draw|tile|raw }}</div>
        <br/>
    </div>
    {% if show_answer %}
        <hr/>
        {% include '_answer.twig' with {
            answer  : content.best_answer,
            content : content,
            is_best : true,
        } only %}
        <div class="row">Другие ответы:</div>
        {% for answer in app.types.abc.each %}
            {% if not answer.equals(content.best_answer) %}
                {% include '_answer.twig' with {
                    answer  : answer,
                    content : content,
                    is_best : false,
                } only %}
            {% endif %}
        {% endfor %}
    {% else %}
        <div class="question">Что сбросить?</div>
        <div class="row variants">
            {% for answer in app.types.abc.each %}
                <button name="{{ answer }}">{{ answer|upper }}. {{ attribute(content.answer, answer).discard|tile|raw }}</button>
            {% endfor %}
        </div>
        <div class="row"></div>
    {% endif %}
</div>

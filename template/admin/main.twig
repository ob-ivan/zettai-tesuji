{% extends 'layout.twig' %}

{% block style %}admin{% endblock %}

{% block body %}
    <div class="welcome">
        Привет, {{ app.security.token.user.username }}!
        <a href="{{ path('admin_logout') }}">[Выйти]</a>
    </div>
    <h1>Задачи</h1>
    {% if mondaiList %}
        <ul>
            {% for mondai in mondaiList %}
                <li>
                    <a href="/admin/mondai/view/{{mondai.mondai_id}}?page={{curPage}}">№{{ mondai.mondai_id }}. {{ mondai.title }}</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="empty">Нет задач</p>
    {% endif %}
    {# TODO: paginator
    {% if mondaiCount > perPage %}
        {% include 'paginator.twig' %}
    {% endif %}
    #}
{% endblock %}

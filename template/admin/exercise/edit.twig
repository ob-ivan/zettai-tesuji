{% extends 'admin/_layout.twig' %}

{% block admin_body %}
    <script src="/script/happy.js"></script>
    <h2>Редактирование задачи</h2>
    {% if errors %}
        <ul class="error">
            {% for error in errors %}
                <li>
                    {% if error == 'CSRF' %}
                        Попытка взлома.
                    {% elseif error == 'EXERCISE_ID:ALREADY_EXISTS' %}
                        Задача №{{ exercise.exercise_id }} уже существует.
                    {% elseif error == 'EXERCISE_ID:NOT_A_NUMBER' %}
                        Номер задачи должен быть положительным целым числом.
                    {% elseif error == 'TITLE:EMPTY' %}
                        Заголовок задачи не должен быть пустым.
                    {% elseif error == 'CONTENT:EMPTY' %}
                        Описание задачи не должно быть пустым.
                    {% else %}
                        Ошибка {{ error }}.
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    <form
        id="admin_exercise_edit"
        action="{{ path('admin_exercise_edit', { 'exercise_id' : exercise_id }) }}?page={{ page }}"
        method="post"
    >
        <input type="hidden" name="csrf" value="{{ csrf }}"/>
        <p>
            <label>№<input name="exercise_id" required value="{{ exercise.exercise_id }}" maxlength="3"/>.</label>
            <input name="title"     required value="{{ exercise.title }}"/>
            <label>
                <input
                    type="checkbox"
                    name="is_hidden"
                    value="1"
                    {% if exercise.is_hidden == 1 %}
                        checked
                    {% endif %}
                />
                (скрыта)
            </label>
        </p>
        <p>
            <label>
                Сдача:
                <select name="kyoku">
                    {% for kyoku in KYOKUS %}
                        <option
                            value="{{ kyoku }}"
                            {% if kyoku == exercise.content.kyoku %}
                                selected
                            {% endif %}
                        >
                            {{ kyoku|kyoku }}
                        </option>
                    {% endfor %}
                </select>
            </label>
        </p>
        <p>
            <label>
                Позиция:
                <select name="jikaze">
                    {% for kaze in KAZES %}
                        <option
                            value="{{ kaze }}"
                            {% if kaze == exercise.content.jikaze %}
                                selected
                            {% endif %}
                        >
                            {{ kaze|kaze }}
                        </option>
                    {% endfor %}
                </select>
            </label>
        </p>
        <p><label>Ход: <input name="junme" required value="{{ exercise.content.junme }}" maxlength="2"/></label></p>
        <p>
            <label>
                Дора:
                {% include 'admin/exercise/_pai_select.twig' with {
                    'name'  : 'dora',
                    'PAIS'  : PAIS,
                    'value' : exercise.content.dora,
                } only %}
            </label>
        </p>
        <p><label>Очки: <input name="mochiten" required value="{{ exercise.content.mochiten }}"/></label></p>
        <p><label>Рука: <input name="tehai"    required value="{{ exercise.content.tehai }}"/></label></p>
        <p>
            <label>
                Набрал:
                {% include 'admin/exercise/_pai_select.twig' with {
                    'name'  : 'tsumo',
                    'PAIS'  : PAIS,
                    'value' : exercise.content.tsumo,
                } only %}
            </label>
        </p>
        {% for letter in ['a', 'b', 'c'] %}
            <p>
                <label>
                    Вариант {{ letter|upper }}:
                    {% include 'admin/exercise/_pai_select.twig' with {
                        'name'  : 'kiri_' ~ letter,
                        'PAIS'  : PAIS,
                        'value' : attribute(exercise.content, 'kiri_' ~ letter),
                    } only %}
                </label>
            </p>
        {% endfor %}
        <p>
            <input type="submit" name="save" value="Сохранить"/>
            {% if exercise_id == 'new' %}
                {% set cancel = path('admin_page', { 'page' : page }) %}
            {% else %}
                {% set cancel = path('admin_exercise_view', { 'exercise_id' : exercise_id }) ~ '?page=' ~ page %}
            {% endif %}
            <input type="button" onclick="location = '{{ cancel }}'" value="Отмена"/>
            {% if exercise_id != 'new' %}
                <input
                    type="submit" name="delete"  value="Удалить"
                    onclick="return window.confirm('После удаления задача не может быть восстановлена.\n\nУдалить задачу?')"
                />
            {% endif %}
        </p>
    </form>
    <script>
        $('#admin_exercise_edit').isHappy({
            fields : {
                'input[name=exercise_id]' : {
                    required : true,
                    message  : 'Номер должен быть целым положительным числом',
                    test : function checkExerciseId(exerciseId) {
                        return !! (exerciseId + '').match(/^\d{1,3}$/) && parseInt(exerciseId, 10) > 0;
                    }
                },
                'input[name=junme]' : {
                    required : true,
                    message  : 'Номер хода должен быть числом от 1 до 18',
                    test : function checkJunme(junme) {
                        if (! (junme + '').match(/^\d{1,2}$/)) {
                            return false;
                        }
                        var parsed = parseInt(junme, 10);
                        return parsed >= 1 && parsed <= 18;
                    }
                },
                'input[name=title]' : {
                    required : true,
                    message  : 'Заголовок должен быть не пуст'
                }
            }
        });
    </script>
{% endblock %}

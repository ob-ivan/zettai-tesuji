{% extends 'admin/_layout.twig' %}

{% block admin_body %}
    <script src="/script/happy.js"></script>
    <h2>Редактирование задачи</h2>
    {% if errors %}
        <ul class="error">
            {% for error in errors %}
                <li>
                    {% if error == 'MONDAI_ID_NEW:ALREADY_EXISTS' %}
                        Задача №{{ mondai_id_new }} уже существует.
                    {% elseif error == 'MONDAI_ID_NEW:NOT_A_NUMBER' %}
                        Номер задачи должен быть положительным целым числом.
                    {% elseif error == 'TITLE:EMPTY' %}
                        Заголовок задачи не должен быть пустым.
                    {% elseif error == 'CONTENT:EMPTY' %}
                        Описание задачи не должно быть пустым.
                    {% else %}
                        Ошибка {{ error }}.
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    <form
        id="admin_mondai_edit"
        action="{{ path('admin_mondai_edit', { 'mondai_id_old' : mondai_id_old }) }}?page={{ page }}"
        method="post"
    >
        <input type="hidden" name="csrf" value="{{ csrf }}"/>
        <p>№<input name="mondai_id_new" required value="{{ mondai_id_new }}" maxlength="3"/>.
            <input name="title"         required value="{{ title }}"/>
        </p>
        <p><textarea name="content" required rows="13">{{ content }}</textarea></p>
        <p>
            <input type="submit" value="Сохранить"/>
            {% if mondai_id_old == 'new' %}
                {% set cancel = url('admin_page', { 'page' : page }) %}
            {% else %}
                {% set cancel = url('admin_mondai_view', { 'mondai_id' : mondai_id_old }) ~ '?page=' ~ page %}
            {% endif %}
            <input type="button" onclick="location = '{{ cancel }}'" value="Отмена"/>
            {# <input type="button" value="Удалить"/> #}
        </p>
    </form>
    <script>
        $('#admin_mondai_edit').isHappy({
            fields : {
                'input[name=mondai_id_new]' : {
                    required : true,
                    message  : 'Номер должен быть целым положительным числом',
                    test : function checkMondaiId(mondaiId) {
                        return !! (mondaiId + '').match(/^\d{1,3}$/) && parseInt(mondaiId, 10) > 0;
                    }
                },
                'input[name=title]' : {
                    required : true,
                    message  : 'Заголовок должен быть не пуст'
                },
                'textarea[name=content]' : {
                    required : true,
                    message  : 'Текст задачи должен быть не пуст'
                }
            }
        });
    </script>
{% endblock %}

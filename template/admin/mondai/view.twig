{% extends 'admin/_layout.twig' %}

{% block admin_body %}
    {% if mondai %}
        <h2>
            Задача №{{ mondai.mondai_id|lpad('0', 3) }}.
            {{ mondai.title }}
            {% if mondai.is_hidden %}
                (скрыта)
            {% endif %}
        </h2>
        <div class="mondai">
            <div class="kyoku"   >Сдача:   {{ mondai.content.kyoku |kyoku   }}</div>
            <div class="jikaze"  >Позиция: {{ mondai.content.jikaze|kaze    }}</div>
            <div class="junme"   >Ход:     {{ mondai.content.junme          }}</div>
            <div class="dora"    >Дора:    {{ mondai.content.dora  |pai|raw }}</div>
            <div class="mochiten">Очки:    {{ mondai.content.mochiten       }}</div>
            <div class="tehai"   >Рука:    {{ mondai.content.tehai |pai|raw }}</div>
            <div class="tsumo"   >Набрал:  {{ mondai.content.tsumo |pai|raw }}</div>
            <div class="question">Варианты ответа:</div>
            <ol  class="variants" style="list-style-type: upper-alpha">
                <li>{{ mondai.content.kiri_a|pai|raw }}</li>
                <li>{{ mondai.content.kiri_b|pai|raw }}</li>
                <li>{{ mondai.content.kiri_c|pai|raw }}</li>
            </ol>
        </div>
        <p><a href="{{ path('admin_mondai_edit', { 'mondai_id' : mondai.mondai_id }) }}?page={{ page }}">[редактировать]</a></p>
    {% else %}
        <p class="empty">Нет такой задачи</p>
    {% endif %}
    
    <p>
        <a href="{{ path('admin_page') }}">[на главную]</a>
        <a href="{{ path('admin_page', { 'page' : page }) }}">[к списку задач]</a>
    </p>
{% endblock %}
